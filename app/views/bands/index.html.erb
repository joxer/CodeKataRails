
<p id="notice"><%= notice %></p>

<div class="container">
    <% @bands.each do |band| %>
    <div class="row">
    <div class=" col-sm-3">
    </div>
    <div class="band col-sm-4">
      <div class="image">

      </div>
      <div class="band-info">
	<div class="band-title">
	  <%= band.name %>
	</div>
	<div class="description">
	  <%= band.description %>
	</div>
	<div class="link">
	  <%=  link_to 'Show', band %>
	</div>
      </div>
    </div>

      <div class=" col-sm-3">
	<% if @user != nil && @user.isAdmin? %>
	<%= link_to 'Edit', edit_band_path(band) %>
	<%= link_to 'Destroy', band, method: :delete, data: { confirm: 'Are you sure?' } %>
	<% end %>
	
      </div>
      </div>
    <% end %>
</div>
